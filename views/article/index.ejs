<h1>Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Is published</th>
    <th>Total Words</th>
    <th>Author</th>
    <th>Created At</th>
  </tr>


  <% articles.forEach(function(article){ %>
  <tr>

    <td> 
        <a href="/article/detail?id=<%= article._id %>">
        <%= article.title %> 
        </a>
    </td>
    <td> <%= article.content %> </td>
    <td> <%= article.isPublished %> </td>
    <td> <%= article.totalWords %> </td>
    <td> <%= article.author %> </td>
    <td> <%= moment(article.createdAt).fromNow() %> </td>

  </tr>
  <% }) %>


</table>
